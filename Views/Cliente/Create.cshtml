@model MarketplaceOnline.Models.Cliente

@{
    ViewData["Title"] = "Criar Novo Usuario";
}

<h3>Cadastrar Novo Usuário</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cpf" class="control-label"></label>
                <input asp-for="Cpf" class="form-control" />
                <span asp-validation-for="Cpf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Senha" class="control-label"></label>
                <input asp-for="Senha" class="form-control" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Endereco.NomeBairro" class="control-label"></label>
                <input asp-for="Endereco.NomeBairro" class="form-control" />
                <span asp-validation-for="Endereco.NomeBairro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Endereco.NomeRua" class="control-label"></label>
                <input asp-for="Endereco.NomeRua" class="form-control" />
                <span asp-validation-for="Endereco.NomeRua" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Endereco.NomeCidade" class="control-label"></label>
                <input asp-for="Endereco.NomeCidade" class="form-control" />
                <span asp-validation-for="Endereco.NomeCidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Endereco.NomeEstado" class="control-label"></label>
                <input asp-for="Endereco.NomeEstado" class="form-control" />
                <span asp-validation-for="Endereco.NomeEstado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Endereco.NomePais" class="control-label"></label>
                <input asp-for="Endereco.NomePais" class="form-control" />
                <span asp-validation-for="Endereco.NomePais" class="text-danger"></span>
            </div>
            <div class="form-group py-4">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
