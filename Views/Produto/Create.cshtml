@model MarketplaceOnline.Models.Produto

@{
    ViewData["Title"] = "Create";
}

<h3>Cadastrar Novo Produto</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group py-1">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group py-1">
                <label asp-for="Preco" class="control-label"></label>
                <input asp-for="Preco" class="form-control" />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>
            <div class="input-group py-3">
                <label asp-for="Imagem" class="control-label input-group-text" for="inputGroupFile02">Upload</label>
                <input type="file" asp-for="Imagem" class="form-control" id="inputGroupFile02" />
                <span asp-validation-for="Imagem" class="text-danger"></span>
            </div>
            <div class="form-group py-1">
                <label asp-for="Vendedor.NomeFantasia" class="control-label"></label>
                <input asp-for="Vendedor.NomeFantasia" class="form-control" />
                <span asp-validation-for="Vendedor.NomeFantasia" class="text-danger"></span>
            </div>
            <div class="form-group py-1">
                <label asp-for="Categoria.CategoriaNome" class="control-label"></label>
                <input asp-for="Categoria.CategoriaNome" class="form-control" />
                <span asp-validation-for="Categoria.CategoriaNome" class="text-danger"></span>
            </div>
            <div class="form-group py-4">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
